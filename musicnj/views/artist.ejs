<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <%- include('head') -%>
    <link rel="stylesheet" href="css/home.css" type="text/css"/>
    <link href="css/mp3.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="font/css/fontawesome.css">
    <script type="text/javascript" src="js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="js/jquery-ui-1.8.21.custom.min.js"></script>
    <script type="text/javascript" src="js/main.js"></script>
    <title>Nghệ Sỹ</title>

</head>
<body>
<div class='brand'>
    <%- include('header')-%>
</div>
<main>
    <section class='section'>
            <div class="container">
                <img class="col-xs-12" src="<%= artist.banner%>" style="width: 100%" alt="...">
            </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="jumbotron col-xs-12" style="background-color: white; padding:20px;border-bottom: 1px solid #efefef;line-height: 1.5">
                <div class="row">
                    <div class="col-xs-2">
                        <a href="#mp3"><img src="<%= artist.image %>" width="140em" height="120em"  style="border-radius: 100%"/>
                        </a>
                    </div>
                    <div class="col-xs-1"></div>
                    <div class="col-xs-9">
                        <h3><b><%= artist.singer%></b></h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="mp3 col-xs-4" id="mp3">
                    <div class="player">
                        <div class="pl"></div>
                        <div class="artist"></div>
                        <div class="cover"></div>
                        <div class="controls">
                            <div class="rew"></div>
                            <div class="play"></div>
                            <div class="pause"></div>
                            <div class="fwd"></div>
                        </div>
                        <div class="volume"></div>
                        <div class="tracker"></div>
                    </div>
                    <ul class="playlist hidden">
                        <% artist.list.forEach(function (item) { %>
                        <li audiourl="<%= item.link %>" cover="<%= item.cover%>"><%= item.song%></li>
                            <% }) %>
                    </ul>
            </div>
            <div class="col-xs-1"></div>
            <div class="col-xs-6">
                <div class="container">
                    <ul class="list-group list-group-flush" style="color: white">
                        <% artist.list.forEach(function (item) { %>
                            <li class="col-xs-8" style="list-style:none">
                                <div class="col-xs-12 row">
                                    <div class="col-xs-2">
                                        <a href="#mp3"><img src="<%= item.cover %>" width="90em" height="80em"  style="border-radius: 20px"/></a>
                                    </div>
                                    <div class="col-xs-5">
                                        <div class="col-xs-12" >
                                            <a href="#mp3"><h4><%=item.song %></h4></a>
                                        </div>
                                    </div>
                                    <div class="col-xs-5 pull-left" style="height: 8em; padding-top: 2em">
                                        <audio controls class="center-block col-xs-12">
                                            <source  src="<%= item.link%>" type="audio/mpeg">
                                        </audio>
                                    </div>
                                </div>
                            </li>
                            <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</main>
<footer >
    <%- include('footer') -%>
</footer>
</body>
</html>